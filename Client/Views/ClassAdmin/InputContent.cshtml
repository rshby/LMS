
@{
    Layout = "_ViewGeneralAdmin";
}

<dev>
    <head>
        <p class="shadow text-center" style="margin : auto;">
            <center>
                <h1>Create Section</h1>
            </center>
            <hr>
        </p>
    </head>
    <body>
        <content>
            <form class="canvas shadow" id = "formSection">
                <div class="form-group">
                    <label for="class">Choose Class</label>
                    <select name="class" class="form-control" id="class-id">
                    </select>
                </div>

                <div class="form-group">
                    <label for="chapter">Chapter</label>
                    <select name="chapter" placeholder="Choose Class" class="form-control" id="onSection">
                    </select>
                </div>

                <div class="form-group">
                    <label for="titleSection">Title Section</label>
                    <input type="text" name="titleSection" class="form-control" placeholder="Input Tittle" id="name">
                </div>

                <div class="form-group">
                    <label for="section">Content (Video Code)</label>
                    <input type="text" name="section" class="form-control" placeholder="Input Code Video" id="link-video">
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="InsertSection()">Create</button>
                </div>
            </form>
        </content>
        <p></p>
    </body>
</dev>
